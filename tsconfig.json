{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "outDir": "build",
    "lib": ["es6", "es7", "es2017", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}
